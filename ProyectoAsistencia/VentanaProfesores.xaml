<Window x:Class="ProyectoAsistencia.VentanaProfesores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoAsistencia"
        mc:Ignorable="d"
        Title="VentanaProfesores" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Registro">
            <Grid Background="#FFFBF9F9">
                <Rectangle HorizontalAlignment="Center" Height="54" Stroke="Black" VerticalAlignment="Top" Width="800" Fill="#FF641C34" Margin="0,-11,0,0"/>
                <Label Content="Profesor:" HorizontalAlignment="Left" Height="36" Margin="9,60,0,0" VerticalAlignment="Top" Width="94" FontWeight="Bold"/>
                <TextBox x:Name="txt_Nombre" HorizontalAlignment="Left" Margin="141,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" Height="19"/>
                <TextBox x:Name="txt_ID" HorizontalAlignment="Left" Margin="141,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="32"/>
                <Label Content="CodigoDeProfesor:" HorizontalAlignment="Left" Height="36" Margin="10,101,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
                <Button x:Name="btnAñadir" Content="Cargar" HorizontalAlignment="Left" Margin="161,277,0,0" VerticalAlignment="Top" Width="60" Height="20"  Background="#FF822D4A" Foreground="White" FontWeight="Bold"  Click="btnAgregar_Click"/>
                <Button x:Name="btnEliminar" Content="Quitar" HorizontalAlignment="Left" Margin="254,277,0,0" VerticalAlignment="Top" Width="60" Height="20" Background="#FF822D4A" Foreground="White" FontWeight="Bold" Click="btnQuitar_Click"/>
                <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="347,277,0,0" VerticalAlignment="Top" Width="60" Height="20" Background="#FF822D4A" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click"/>
                <Button x:Name="btnCargar" Content="Leer" HorizontalAlignment="Left" Margin="440,277,0,0" VerticalAlignment="Top" Width="60" Height="20" Background="#FF822D4A" Foreground="White" FontWeight="Bold" Click="btnCargar_Click"/>
                <DataGrid x:Name="dataGrid_Resultado" d:ItemsSource="{d:SampleData ItemCount=5}" Height="NaN" Margin="0,310,0,0" SelectionChanged="dataGrid_Resultado_SelectionChanged"/>
                <TextBox x:Name="txtDNI" HorizontalAlignment="Left" Margin="141,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="36"/>
                <DatePicker x:Name="dateGrid_Fecha" HorizontalAlignment="Left" Margin="470,147,0,0" VerticalAlignment="Top" Width="120" Height="32"/>
                <Label Content="DNI:" HorizontalAlignment="Left" Margin="16,142,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold"/>
                <Label Content="FechaDeAlta:" HorizontalAlignment="Left" Margin="347,147,0,0" VerticalAlignment="Top" Width="89" FontWeight="Bold"/>
                <Label Content="Profesores" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" Width="206" Height="28" FontSize="15" FontWeight="Bold"/>
                <Label Content="Telefono:" HorizontalAlignment="Left" Margin="347,61,0,0" VerticalAlignment="Top" Width="79" FontWeight="Bold"/>
                <Label Content="Estado:" HorizontalAlignment="Left" Margin="347,193,0,0" VerticalAlignment="Top" Width="68" FontWeight="Bold"/>
                <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Margin="470,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" Height="31"/>
                <CheckBox x:Name="checkBx_Estado" Content="Habilitado" HorizontalAlignment="Left" Margin="470,198,0,0" VerticalAlignment="Top"/>
                <Label Content="Domicilio:" HorizontalAlignment="Left" Margin="16,193,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold"/>
                <TextBox x:Name="txtDomicilio" HorizontalAlignment="Left" Margin="141,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="35"/>
                <Label Content="CorreoElectronico:" HorizontalAlignment="Left" Margin="347,105,0,0" VerticalAlignment="Top" Width="118" FontWeight="Bold"/>
                <TextBox x:Name="txtCorreo" HorizontalAlignment="Left" Margin="470,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" Height="32"/>
            </Grid>
        </TabItem>
        <TabItem Header="Buscador">
            <Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
