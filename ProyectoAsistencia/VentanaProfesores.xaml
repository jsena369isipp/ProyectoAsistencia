<Window x:Class="ProyectoAsistencia.VentanaProfesores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoAsistencia"
        mc:Ignorable="d"
        Title="VentanaProfesores" Height="450" Width="800">
    <TabControl Height="434" VerticalAlignment="Top">
        <TabItem Header="Registro">
            <Grid Background="#FFFBF9F9" Height="406" Margin="-4,0,-4,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Rectangle Stroke="Black" Fill="#FF641C34" Margin="5,0,-3,363" Height="49" VerticalAlignment="Bottom"/>
                <Label Content="Profesor:" HorizontalAlignment="Left" Height="36" Margin="10,100,0,0" VerticalAlignment="Top" Width="94" FontWeight="Bold"/>
                <TextBox x:Name="txt_Nombre" HorizontalAlignment="Left" Margin="141,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="19" PreviewKeyDown="txtNombre_PreviewKeyDown"/>
                <TextBox x:Name="txt_ID" HorizontalAlignment="Left" Margin="141,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" Height="26" PreviewKeyDown="txtID_PreviewKeyDown"/>
                <Label Content="CódigoDeProfesor:" HorizontalAlignment="Left" Height="36" Margin="10,60,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
                <Button x:Name="btnAñadir" Content="Cargar" Margin="174,262,0,0" VerticalAlignment="Top" Height="20"  Background="#FF822D4A" Foreground="White" FontWeight="Bold"  Click="btnAgregar_Click" HorizontalAlignment="Left" Width="60"/>
                <Button x:Name="btnEliminar" Content="Quitar" Margin="256,262,0,0" VerticalAlignment="Top" Height="20" Background="#FF822D4A" Foreground="White" FontWeight="Bold" Click="btnQuitar_Click" HorizontalAlignment="Left" Width="60"/>
                <Button x:Name="btnCargar" Content="Leer" Margin="341,262,0,0" VerticalAlignment="Top" Height="20" Background="#FF822D4A" Foreground="White" FontWeight="Bold" Click="btnCargar_Click" HorizontalAlignment="Left" Width="60"/>
                <DataGrid x:Name="dataGrid_Resultado" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="dataGrid_Resultado_SelectionChanged" Margin="0,295,0,0"/>
                <TextBox x:Name="txtDNI" HorizontalAlignment="Left" Margin="141,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="21" PreviewKeyDown="txtDNI_PreviewKeyDown"/>
                <DatePicker x:Name="dateGrid_Fecha" Margin="491,134,0,0" VerticalAlignment="Top" Height="29" HorizontalAlignment="Left" Width="140"/>
                <Label Content="DNI:" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold"/>
                <Label Content="FechaDeAlta:" Margin="367,132,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" Width="108"/>
                <Label Content="Profesores" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" Width="206" Height="43" FontSize="24" FontWeight="Bold"/>
                <Label Content="Teléfono:" Margin="367,65,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" Width="82"/>
                <Label Content="Estado:" Margin="367,167,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" Width="68"/>
                <TextBox x:Name="txtTelefono" Margin="491,65,0,315" TextWrapping="Wrap" PreviewKeyDown="txtTelefono_PreviewKeyDown" HorizontalAlignment="Left" Width="134"/>
                <CheckBox x:Name="checkBx_Estado" Content="Habilitado" Margin="491,176,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75"/>
                <Label Content="Domicilio:" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold"/>
                <TextBox x:Name="txtDomicilio" HorizontalAlignment="Left" Margin="141,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Height="37" PreviewKeyDown="txtDomicilio_PreviewKeyDown"/>
                <Label Content="CorreoElectrónico:" Margin="368,102,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" Width="118"/>
                <TextBox x:Name="txtCorreo" Margin="491,102,0,283" TextWrapping="Wrap" PreviewKeyDown="txtCorrreo_PreviewKeyDown" HorizontalAlignment="Left" Width="185"/>
                <Image Height="49" Margin="0,-6,17,0" VerticalAlignment="Top" Source="/Imagen/isipp-blanco.png" HorizontalAlignment="Right" Width="55"/>
            </Grid>
        </TabItem>
        <TabItem Header="Buscador">
            <Grid Height="407" Margin="0,0,-2,0">
                <Rectangle Stroke="Black" Fill="#FF641C34" Margin="-2,0,-2,358"/>
                <Label x:Name="LblAlumno2" Content="Buscador" Margin="2,0,588,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" Height="43" FontSize="24" FontWeight="Bold"/>
                <Image Height="49" Margin="0,0,-4,0" VerticalAlignment="Top" Source="/Imagen/isipp-blanco.png" HorizontalAlignment="Right" Width="57"/>
                <CheckBox x:Name="checkCodProfe" Content="Código Profesor:" HorizontalAlignment="Left" Margin="15,70,0,0" VerticalAlignment="Top" Width="123" FontWeight="Bold"/>
                <CheckBox x:Name="checkDNI" Content="DNI:" HorizontalAlignment="Left" Margin="15,147,0,0" VerticalAlignment="Top" Height="30" Width="112" FontWeight="Bold"/>
                <CheckBox x:Name="checkNombre" Content="Profesor:" HorizontalAlignment="Left" Margin="15,109,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <CheckBox x:Name="checkFecha" Content="Fecha De Alta:" HorizontalAlignment="Left" Margin="373,147,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <CheckBox x:Name="checkTel" Content="Teléfono:" Margin="373,73,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" Width="72"/>
                <CheckBox x:Name="checkDomicilio" Content="Domicilio:" HorizontalAlignment="Left" Margin="15,190,0,0" VerticalAlignment="Top" Width="84" FontWeight="Bold"/>
                <CheckBox x:Name="checkBx_Estado2" Content="Estado" HorizontalAlignment="Left" Margin="373,184,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="64"/>
                <CheckBox x:Name="checkCorreo" Content="Correo Electrónico:" Margin="373,112,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" Width="127"/>
                <TextBox x:Name="txtDesde" HorizontalAlignment="Left" Margin="143,70,0,0" TextWrapping="Wrap" Text="Desde:" VerticalAlignment="Top" Width="75" Height="18" GotFocus="txtDesde_GotFocus" PreviewKeyDown="txtDesde_PreviewKeyDown"/>
                <TextBox x:Name="txtHasta" HorizontalAlignment="Left" Margin="252,70,0,0" TextWrapping="Wrap" Text="Hasta:" VerticalAlignment="Top" Width="74" Height="18" GotFocus="txtHasta_GotFocus" PreviewKeyDown="txtHasta_PreviewKeyDown"/>
                <TextBox x:Name="txtNombre2" HorizontalAlignment="Left" Margin="143,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="19" PreviewKeyDown="txtNombre2_PreviewKeyDown"/>
                <TextBox x:Name="txtDNI2" HorizontalAlignment="Left" Margin="143,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="21" PreviewKeyDown="txtDNI2_PreviewKeyDown"/>
                <TextBox x:Name="txtTel2" Margin="517,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" PreviewKeyDown="txtTel2_PreviewKeyDown" HorizontalAlignment="Left" Width="134"/>
                <DatePicker x:Name="dateGrid_Fecha2" HorizontalAlignment="Left" Margin="517,141,0,0" VerticalAlignment="Top" Height="27"/>
                <TextBox x:Name="txtDom2" HorizontalAlignment="Left" Margin="143,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" PreviewKeyDown="txtDom2_PreviewKeyDown"/>
                <TextBox x:Name="txtCorreo2" Margin="517,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" PreviewKeyDown="txtCorreo2_PreviewKeyDown" HorizontalAlignment="Left" Width="185"/>
                <Button x:Name="BtnBuscar" Content="Buscar" Height="24" Margin="286,255,0,0" VerticalAlignment="Top" BorderBrush="#FF822D4A" Background="#FF822D4A" FontWeight="Bold" Foreground="White" Click="btnBuscar_Click" HorizontalAlignment="Left" Width="81"/>
                <DataGrid x:Name="dataGrid_Resultado2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,284,0,0" Height="123" VerticalAlignment="Top"/>
                <Label x:Name="labelCant" Content="" HorizontalAlignment="Left" Margin="374,207,0,0" VerticalAlignment="Top" Width="376" FontWeight="Bold"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
