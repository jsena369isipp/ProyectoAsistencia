<Window x:Class="ProyectoAsistencia.VentanaProfesores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoAsistencia"
        mc:Ignorable="d"
        Title="VentanaProfesores" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Registro">
            <Grid Background="#FFFBF9F9">
                <Rectangle HorizontalAlignment="Center" Height="54" Stroke="Black" VerticalAlignment="Top" Width="800" Fill="#FF641C34" Margin="0,-11,0,0"/>
                <Label Content="Profesor:" HorizontalAlignment="Left" Height="36" Margin="10,100,0,0" VerticalAlignment="Top" Width="94" FontWeight="Bold"/>
                <TextBox x:Name="txt_Nombre" HorizontalAlignment="Left" Margin="141,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="19"/>
                <TextBox x:Name="txt_ID" HorizontalAlignment="Left" Margin="141,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" Height="17"/>
                <Label Content="CodigoDeProfesor:" HorizontalAlignment="Left" Height="36" Margin="10,60,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
                <Button x:Name="btnAñadir" Content="Cargar" HorizontalAlignment="Left" Margin="161,277,0,0" VerticalAlignment="Top" Width="60" Height="20"  Background="#FF822D4A" Foreground="White" FontWeight="Bold"  Click="btnAgregar_Click"/>
                <Button x:Name="btnEliminar" Content="Quitar" HorizontalAlignment="Left" Margin="254,277,0,0" VerticalAlignment="Top" Width="60" Height="20" Background="#FF822D4A" Foreground="White" FontWeight="Bold" Click="btnQuitar_Click"/>
                <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="347,277,0,0" VerticalAlignment="Top" Width="60" Height="20" Background="#FF822D4A" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click"/>
                <Button x:Name="btnCargar" Content="Leer" HorizontalAlignment="Left" Margin="440,277,0,0" VerticalAlignment="Top" Width="60" Height="20" Background="#FF822D4A" Foreground="White" FontWeight="Bold" Click="btnCargar_Click"/>
                <DataGrid x:Name="dataGrid_Resultado" d:ItemsSource="{d:SampleData ItemCount=5}" Height="NaN" Margin="0,310,0,0" SelectionChanged="dataGrid_Resultado_SelectionChanged"/>
                <TextBox x:Name="txtDNI" HorizontalAlignment="Left" Margin="141,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="21"/>
                <DatePicker x:Name="dateGrid_Fecha" HorizontalAlignment="Left" Margin="487,96,0,0" VerticalAlignment="Top" Width="140" Height="29"/>
                <Label Content="DNI:" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold"/>
                <Label Content="FechaDeAlta:" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Width="90" FontWeight="Bold"/>
                <Label Content="Profesores" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" Width="206" Height="43" FontSize="24" FontWeight="Bold"/>
                <Label Content="Telefono:" HorizontalAlignment="Left" Margin="10,206,0,0" VerticalAlignment="Top" Width="79" FontWeight="Bold"/>
                <Label Content="Estado:" HorizontalAlignment="Left" Margin="352,132,0,0" VerticalAlignment="Top" Width="68" FontWeight="Bold"/>
                <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Margin="141,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="26"/>
                <CheckBox x:Name="checkBx_Estado" Content="Habilitado" HorizontalAlignment="Left" Margin="487,140,0,0" VerticalAlignment="Top"/>
                <Label Content="Domicilio:" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold"/>
                <TextBox x:Name="txtDomicilio" HorizontalAlignment="Left" Margin="141,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="20"/>
                <Label Content="CorreoElectronico:" HorizontalAlignment="Left" Margin="352,65,0,0" VerticalAlignment="Top" Width="118" FontWeight="Bold"/>
                <TextBox x:Name="txtCorreo" HorizontalAlignment="Left" Margin="487,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="16"/>
            </Grid>
        </TabItem>
        <TabItem Header="Buscador">
            <Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
