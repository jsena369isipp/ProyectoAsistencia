<Window x:Class="ProyectoAsistencia.VentanaCursos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoAsistencia"
        mc:Ignorable="d"
        Title="Cursos" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <TabControl>
        <TabItem Header="Registro">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="18,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Text="Descripcion:"/>
                <TextBlock HorizontalAlignment="Left" Margin="271,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14"><Run Language="es-es" Text="Estado:"/></TextBlock>
                <TextBlock HorizontalAlignment="Left" Margin="18,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Text="Preceptor:"/>
                <TextBlock HorizontalAlignment="Left" Margin="18,134,0,0" TextWrapping="Wrap" Text="Codigo Cursos:" VerticalAlignment="Top" FontSize="14"/>
                <CheckBox x:Name="chbEstado" Content="Habilitado" HorizontalAlignment="Left" Margin="328,77,0,0" VerticalAlignment="Top" FontSize="14"/>
                <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Margin="121,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
                <TextBox x:Name="txtCurso" HorizontalAlignment="Left" Margin="121,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
                <DataGrid SelectionChanged="dtgCursos_SelectionChanged" x:Name="dtgCursos" d:ItemsSource="{d:SampleData ItemCount=5}" Height="NaN" Margin="0,259,0,0"/>
                <Button x:Name="bttCargar" Content="Cargar" HorizontalAlignment="Left" Margin="463,73,0,0" VerticalAlignment="Top" FontSize="14" Click="Button_Click" Background="#FF822D4A" Foreground="White" BorderBrush="Black"/>
                <Button x:Name="bttnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="522,73,0,0" VerticalAlignment="Top" FontSize="14" Click="bttnGuardar_Click" Background="#FF822D4A" Foreground="White" BorderBrush="Black"/>
                <Button x:Name="bttnQuitar" Content="Quitar" HorizontalAlignment="Left" Margin="358,215,0,0" VerticalAlignment="Top" FontSize="14" Click="ButtonQuitar_Click" Width="54" Background="#FF822D4A" Foreground="White" BorderBrush="Black"/>
                <Button x:Name="bttnLeer" Content="Leer" HorizontalAlignment="Left" Margin="432,215,0,0" VerticalAlignment="Top" FontSize="14" Width="45" Click="bttnLeer_Click" Background="#FF822D4A" Foreground="White" BorderBrush="Black"/>
                <ComboBox x:Name="cmbPreceptor" HorizontalAlignment="Left" Margin="121,0,0,0" VerticalAlignment="Center" Width="120">
                    <ComboBoxItem Content="Juan" FontSize="14"/>
                    <ComboBoxItem Content="Pedro" FontSize="14"/>
                    <ComboBoxItem Content="Laura" FontSize="14"/>
                </ComboBox>
                <Rectangle HorizontalAlignment="Center" Height="55" Stroke="Black" VerticalAlignment="Top" Width="800" Fill="#FF641C34"/>
                <Label Content="CURSOS" HorizontalAlignment="Left" Margin="18,5,0,0" VerticalAlignment="Top" Height="45" Width="206" FontSize="25" FontWeight="Bold" Foreground="White"/>

            </Grid>
        </TabItem>

        <TabItem Header="Buscador" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
            <Grid>
                <Rectangle HorizontalAlignment="Left" Height="55" Stroke="Black" VerticalAlignment="Top" Width="800" Fill="#FF641C34" Grid.ColumnSpan="2" Margin="-3,0,0,0"/>
                <Label Content="Buscador" HorizontalAlignment="Left" Margin="18,5,0,0" VerticalAlignment="Top" Height="45" Width="206" FontSize="25" FontWeight="Bold" Foreground="White" Grid.ColumnSpan="2"/>
                <DataGrid x:Name="dtgBuscador" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="-3,220,0,0" Grid.ColumnSpan="2"/>
                <CheckBox x:Name="chkCodCursos" Content="Codigo Cursos" HorizontalAlignment="Left" Margin="18,133,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Grid.ColumnSpan="2"/>
                <TextBox x:Name="txtDesde" HorizontalAlignment="Left" Margin="121,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Desde"/>
                <CheckBox x:Name="chkDescripcion" Content="Descripcion" HorizontalAlignment="Left" Margin="18,81,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <TextBox x:Name="txtDescripcion2" HorizontalAlignment="Left" Margin="121,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="txtEstado2" HorizontalAlignment="Left" Margin="121,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <CheckBox x:Name="chkEstado" Content="Estado" HorizontalAlignment="Left" Margin="18,188,0,0" VerticalAlignment="Top"/>
                <Button x:Name="txtBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="291,184,0,0" VerticalAlignment="Top" Background="#FF822D4A" Foreground="White" BorderBrush="Black" Click="txtBuscar_Click"/>
                <TextBox x:Name="txtHasta" HorizontalAlignment="Left" Margin="258,130,0,0" TextWrapping="Wrap" Text="Hasta" VerticalAlignment="Top" Width="120"/>
                <Label x:Name="LblCant" Content="Label" HorizontalAlignment="Left" Margin="529,186,0,0" VerticalAlignment="Top"/>

            </Grid>
        </TabItem>
    </TabControl>
</Window>
