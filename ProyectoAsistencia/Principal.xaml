<Window x:Class="ProyectoAsistencia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoAsistencia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="896" Background="DarkGray">
    <Grid>
        <Menu Height="50px" VerticalAlignment="Top" Background="#FF641C34">

            <MenuItem Header="ASISTENCIAS" Height="50" Width="140px" Foreground="White"  >
